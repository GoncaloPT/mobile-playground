<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bmw.tcube.auth" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>FaceIdAuthPoc</name>
    <description>
        A poc to showcase faceid in ios using cordova
    </description>
    <author email="goncalosamuel@gmail.com">
       Gon√ßalo Sila
    </author>
    <hook src="scripts/prebuild.js" type="before_prepare" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-biometric-keychain" spec="~0.0.4" />
    <plugin name="cordova-plugin-ios-keychain" spec="~3.0.1" />
</widget>
